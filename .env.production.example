# Production Environment Variables Template
# Copy this file to configure production environment variables in Vercel

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Pourtrait
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_VERCEL_ENV=production

# ============================================================================
# Supabase Configuration
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_PROJECT_REF=your_project_ref_here
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# ============================================================================
# Authentication & Security
# ============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=https://your-domain.com
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# ============================================================================
# AI Services Configuration
# ============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_openai_org_id_here

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=wine-recommendations

# ============================================================================
# Image Processing Services
# ============================================================================
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}

# ============================================================================
# External Wine Data APIs
# ============================================================================
WINE_API_KEY=your_wine_database_api_key_here
VIVINO_API_KEY=your_vivino_api_key_here
WINE_SEARCHER_API_KEY=your_wine_searcher_api_key_here

# ============================================================================
# Email & Communication Services
# ============================================================================
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@your-domain.com

# ============================================================================
# Push Notifications
# ============================================================================
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@your-domain.com

# ============================================================================
# Monitoring & Analytics
# ============================================================================
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here

# PostHog Analytics (Optional)
POSTHOG_API_KEY=phc_your_posthog_api_key_here
POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# Error Tracking & Alerting
# ============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# ============================================================================
# Cron Jobs & Background Tasks
# ============================================================================
CRON_SECRET=your_cron_secret_here_minimum_32_characters

# ============================================================================
# Rate Limiting & Security
# ============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ============================================================================
# File Storage & CDN
# ============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary (Alternative image storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================================================
# Database Backup & Recovery
# ============================================================================
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# ============================================================================
# External Service Monitoring
# ============================================================================
PINGDOM_API_KEY=your_pingdom_api_key_here
UPTIMEROBOT_API_KEY=your_uptimerobot_api_key_here

# ============================================================================
# Feature Flags & Configuration
# ============================================================================
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_IMAGE_PROCESSING=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_MAINTENANCE_MODE=false

# ============================================================================
# Performance & Scaling
# ============================================================================
MAX_CONCURRENT_AI_REQUESTS=10
MAX_IMAGE_PROCESSING_SIZE=10485760
API_RATE_LIMIT_PER_MINUTE=100
DATABASE_CONNECTION_LIMIT=20

# ============================================================================
# Compliance & Legal
# ============================================================================
GDPR_COMPLIANCE_ENABLED=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# ============================================================================
# Development & Testing (Production values)
# ============================================================================
LOG_LEVEL=info
DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_ANALYTICS_TRACKING=true

# ============================================================================
# Vercel Specific Configuration
# ============================================================================
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# ============================================================================
# Domain & SSL Configuration
# ============================================================================
DOMAIN_NAME=your-domain.com
SSL_CERTIFICATE_PATH=/path/to/ssl/cert
SSL_PRIVATE_KEY_PATH=/path/to/ssl/key

# ============================================================================
# Business Configuration
# ============================================================================
COMPANY_NAME=Your Company Name
SUPPORT_EMAIL=support@your-domain.com
ADMIN_EMAIL=admin@your-domain.com
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# ============================================================================
# Regional Configuration
# ============================================================================
DEFAULT_TIMEZONE=UTC
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,fr-FR,es-ES,de-DE,it-IT

# ============================================================================
# Cache Configuration
# ============================================================================
REDIS_URL=redis://your-redis-url:6379
CACHE_TTL_SECONDS=3600
STATIC_CACHE_TTL_SECONDS=86400

# ============================================================================
# Search Configuration
# ============================================================================
ELASTICSEARCH_URL=https://your-elasticsearch-url
SEARCH_INDEX_NAME=wine-search
SEARCH_API_KEY=your_search_api_key_here