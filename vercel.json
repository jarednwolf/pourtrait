{
  "crons": [
    {
      "path": "/api/notifications/process",
      "schedule": "0 9 * * *"
    }
  ],
  "functions": {
    "app/api/notifications/process/route.ts": {
      "maxDuration": 60
    },
    "app/api/ai/chat/route.ts": {
      "maxDuration": 30
    },
    "app/api/ai/recommendations/route.ts": {
      "maxDuration": 30
    },
    "app/api/image/recognize-wine/route.ts": {
      "maxDuration": 45
    },
    "app/api/image/ocr/route.ts": {
      "maxDuration": 45
    }
  },

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}