{
  "crons": [
    {
      "path": "/api/notifications/process",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/metrics/llm-map-digest",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/metrics/llm-map-rollup",
      "schedule": "5 2 * * *"
    }
  ],


  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}